BOT_TOKEN=your_bot_token_here
CHANNEL_ID=@your_channel_username

# Admin user ID for bot management (OPTIONAL - now auto-detects channel admins)
# ADMIN_USER_ID=your_telegram_user_id
# Note: Channel admins automatically get access to admin commands:
# /restart_proxy - Restart MTProxy service
# /reboot_vps CONFIRM - Reboot entire VPS (DANGEROUS)

# Language for bot messages (en=English, fa=Persian/Farsi)
BOT_LANGUAGE=en

# For local execution (same VPS), leave VPS_HOST as localhost or comment out
VPS_HOST=localhost
# VPS_USER=root
# SSH_KEY_PATH=path_to_your_private_key

# For remote execution, uncomment and configure:
# VPS_HOST=your_vps_ip_address
# VPS_USER=root
# SSH_KEY_PATH=path_to_your_private_key

MTPROXY_PATH=/opt/MTProxy
MTPROXY_PORT=your_mtproxy_port